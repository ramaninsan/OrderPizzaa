<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp">

    <ImageView
        android:id="@+id/imgUser"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/img_pizza1"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tvPizzaName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/imgUser"
        android:text="vvdvsdvssvs"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tvByUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvPizzaName"
        android:layout_alignStart="@+id/tvPizzaName"
        android:text="vvdvsdvssvs"
        android:textColor="@color/black"
        android:textSize="14sp"
        />

    <ImageView
        android:id="@+id/imgRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_toStartOf="@+id/tvRating"

        android:src="@drawable/ic_rating" />

    <TextView
        android:id="@+id/tvRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="10dp"
        android:text="4.2"

        android:textSize="13sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tvRevDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgUser"
        android:layout_marginStart="13dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="13dp"
        android:text="fvsvsdvsvsfvsvsdvssvsvsvsvsvsvsvsvsvsfvsvsdvssvsvsvsvsvsvsvsvsvsfvsvsdvssvsvsvsvsvsvsvsvsvssvsvsvsvsvsvsvsvs" />


    <ImageView
        android:id="@+id/imgLike"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignTop="@+id/imgRating"
        android:layout_marginTop="4dp"
        android:layout_toStartOf="@+id/tvLikes"
        android:src="@drawable/ic_heart" />

    <TextView
        android:id="@+id/tvLikes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12"
        android:layout_toStartOf="@+id/imgRating"
        android:layout_alignTop="@+id/imgRating"
        android:textSize="12sp"
        android:layout_marginStart="3dp"
        android:layout_marginTop="4dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:alpha="0.4"
        android:background="@color/black"/>

</RelativeLayout>