<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="340dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/circle_bg" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="fsfsfsfssgsg gsddbs"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="70dp"
            android:text="      2\nMedium"
            android:textColor="@color/amber" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPrice"
            android:layout_alignTop="@id/tvQuantity"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="30dp"
            android:text="CAD\n20"
            android:textColor="@color/amber" />


        <ImageView
            android:id="@+id/imgPizza"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:elevation="10dp"
            android:src="@drawable/img_pizza1" />


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/imgPizza"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="30dp"
                android:src="@drawable/ic_chilli" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_pizza"
            android:id="@+id/iconPizza"
            android:layout_marginStart="30dp"
            android:layout_below="@+id/imgPizza"/>

        <TextView
            android:id="@+id/tvLayerType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgPizza"
            android:layout_marginStart="7dp"
            android:layout_toEndOf="@+id/iconPizza"
            android:text="Thin Crust"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="65dp"
            android:layout_marginStart="30dp"
            android:background="@color/purple_500"
            android:layout_below="@+id/tvLayerType"/>

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_layers"
            android:id="@+id/iconLayers"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/iconPizza"/>

        <TextView
            android:id="@+id/tvToppings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvLayerType"
            android:layout_marginStart="7dp"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/iconPizza"
            android:text="dsvsvsvvsvsssv"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_below="@+id/tvToppings"
            android:layout_marginStart="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="65dp"
            android:background="@color/purple_500" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/ic_dlvry"
            android:id="@+id/iconDlvry"
            android:layout_below="@+id/iconLayers"
            android:layout_marginStart="30dp"
            android:layout_marginTop="17dp"/>

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvToppings"
            android:layout_marginStart="8dp"
            android:layout_marginTop="17dp"
            android:layout_toEndOf="@+id/iconDlvry"
            android:text="to be delievered.."
            android:textColor="@color/teal_100"
            android:textSize="16sp"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>